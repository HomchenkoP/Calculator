<?xml version="1.0" encoding="utf-8"?>
<!-- * Создайте макет калькулятора для горизонтальной ориентации экрана и отображайте его в ландшафтной ориентации. -->
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:rowCount="5"
    android:columnCount="5">
    <!-- строка 1 -->
    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="5"
        android:minHeight="5dp"/>
    <TextView
        android:id="@+id/displayView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:textAlignment="viewEnd"
        android:maxHeight="90dp"
        android:text="0"
        android:textSize="@dimen/displayTextSize"
        android:layout_marginHorizontal="@dimen/buttonMarginHorizontal"
        android:layout_marginVertical="@dimen/buttonMarginVertical"/>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="5"
        android:minHeight="5dp"/>
    <!-- строка 2 -->
    <Button
        android:id="@+id/button_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_7"
        android:textSize="@dimen/buttonTextSize"
        android:layout_marginHorizontal="@dimen/buttonMarginHorizontal"
        android:layout_marginVertical="@dimen/buttonMarginVertical"/>
    <Button
        android:id="@+id/button_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_8"
        android:textSize="@dimen/buttonTextSize"
        android:layout_marginHorizontal="@dimen/buttonMarginHorizontal"
        android:layout_marginVertical="@dimen/buttonMarginVertical"/>
    <Button
        android:id="@+id/button_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_9"
        android:textSize="@dimen/buttonTextSize"
        android:layout_marginHorizontal="@dimen/buttonMarginHorizontal"
        android:layout_marginVertical="@dimen/buttonMarginVertical"/>
    <Button
        android:id="@+id/button_asterisk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/asterisk"
        android:textSize="@dimen/buttonTextSize"
        android:layout_marginHorizontal="@dimen/buttonMarginHorizontal"
        android:layout_marginVertical="@dimen/buttonMarginVertical"/>
    <Button
        android:id="@+id/button_ac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:text="@string/ac"
        android:textSize="@dimen/buttonTextSize"
        android:layout_marginHorizontal="@dimen/buttonMarginHorizontal"
        android:layout_marginVertical="@dimen/buttonMarginVertical"/>
    <!-- строка 3 -->
    <Button
        android:id="@+id/button_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_4"
        android:textSize="@dimen/buttonTextSize"
        android:layout_marginHorizontal="@dimen/buttonMarginHorizontal"
        android:layout_marginVertical="@dimen/buttonMarginVertical"/>
    <Button
        android:id="@+id/button_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_5"
        android:textSize="@dimen/buttonTextSize"
        android:layout_marginHorizontal="@dimen/buttonMarginHorizontal"
        android:layout_marginVertical="@dimen/buttonMarginVertical"/>
    <Button
        android:id="@+id/button_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_6"
        android:textSize="@dimen/buttonTextSize"
        android:layout_marginHorizontal="@dimen/buttonMarginHorizontal"
        android:layout_marginVertical="@dimen/buttonMarginVertical"/>
    <Button
        android:id="@+id/button_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/minus"
        android:textSize="@dimen/buttonTextSize"
        android:layout_marginHorizontal="@dimen/buttonMarginHorizontal"
        android:layout_marginVertical="@dimen/buttonMarginVertical"/>
    <Button
        android:id="@+id/button_ce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ce"
        android:textSize="@dimen/buttonTextSize"
        android:layout_marginHorizontal="@dimen/buttonMarginHorizontal"
        android:layout_marginVertical="@dimen/buttonMarginVertical"/>
    <!-- строка 4 -->
    <Button
        android:id="@+id/button_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_1"
        android:textSize="@dimen/buttonTextSize"
        android:layout_marginHorizontal="@dimen/buttonMarginHorizontal"
        android:layout_marginVertical="@dimen/buttonMarginVertical"/>
    <Button
        android:id="@+id/button_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_2"
        android:textSize="@dimen/buttonTextSize"
        android:layout_marginHorizontal="@dimen/buttonMarginHorizontal"
        android:layout_marginVertical="@dimen/buttonMarginVertical"/>
    <Button
        android:id="@+id/button_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_3"
        android:textSize="@dimen/buttonTextSize"
        android:layout_marginHorizontal="@dimen/buttonMarginHorizontal"
        android:layout_marginVertical="@dimen/buttonMarginVertical"/>
    <Button
        android:id="@+id/button_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowSpan="2"
        android:layout_gravity="fill_vertical"
        android:text="@string/plus"
        android:textSize="@dimen/buttonTextSize"
        android:layout_marginHorizontal="@dimen/buttonMarginHorizontal"
        android:layout_marginVertical="@dimen/buttonMarginVertical"/>
    <Button
        android:id="@+id/button_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/percent"
        android:textSize="@dimen/buttonTextSize"
        android:layout_marginHorizontal="@dimen/buttonMarginHorizontal"
        android:layout_marginVertical="@dimen/buttonMarginVertical"/>
    <!-- строка 5 -->
    <Button
        android:id="@+id/button_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_0"
        android:textSize="@dimen/buttonTextSize"
        android:layout_marginHorizontal="@dimen/buttonMarginHorizontal"
        android:layout_marginVertical="@dimen/buttonMarginVertical"/>
    <Button
        android:id="@+id/button_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dot"
        android:textSize="@dimen/buttonTextSize"
        android:layout_marginHorizontal="@dimen/buttonMarginHorizontal"
        android:layout_marginVertical="@dimen/buttonMarginVertical"/>
    <Button
        android:id="@+id/button_calc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calc"
        android:textSize="@dimen/buttonTextSize"
        android:layout_marginHorizontal="@dimen/buttonMarginHorizontal"
        android:layout_marginVertical="@dimen/buttonMarginVertical"/>
    <Button
        android:id="@+id/button_slash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/slash"
        android:textSize="@dimen/buttonTextSize"
        android:layout_marginHorizontal="@dimen/buttonMarginHorizontal"
        android:layout_marginVertical="@dimen/buttonMarginVertical"/>
</GridLayout>